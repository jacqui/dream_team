<%= simple_form_for([:admin, @player], :defaults => { :input_html => { :class => 'input-xlarge' } }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :full_name %>
    <%= f.input :position %>
    <%= f.association :team %>
    <%= f.input :bio %>
    <%= f.input :source_id, :label => "Source ID" %>
    <%= f.input :source %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn-primary" %>
  </div>
<% end %>
