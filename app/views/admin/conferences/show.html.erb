<div class="page-header">
  <%= link_to admin_sports_path, :class => 'btn' do %>
    <i class="icon-list-alt"></i>
    Back
  <% end %>
  <%= link_to edit_admin_sport_path(@sport), :class => 'btn btn-primary' do %>
    <i class="icon-pencil icon-white"></i>
    Edit
  <% end %>
  <h1><%= @sport.name %></h1>
</div>

<div class="page-header">
  <%= link_to new_admin_league_path(:sport => @sport), :class => 'btn btn-success' do %>
    <i class="icon-plus icon-white"></i>
    Add
  <% end %>
  <h2>Leagues</h2>
</div>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Abbreviation</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @sport.leagues.each do |league| %>
      <tr>
        <td><%= link_to league.name, edit_admin_league_path(league) %></td>
        <td><%= link_to league.abbreviation, edit_admin_league_path(league) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
