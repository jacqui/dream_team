<%= simple_form_for([:admin, @sport], :html => { :class => 'form-horizontal' }, :defaults => { :input_html => { :class => 'input-medium' } }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, :placeholder => "Sport name" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn-primary" %>
  </div>
<% end %>
