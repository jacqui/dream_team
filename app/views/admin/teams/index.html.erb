<div class="page-header">
  <%= link_to new_admin_team_path, :class => 'btn btn-primary' do %>
    <i class="icon-plus icon-white"></i>
    New Team
  <% end %>
  <h1>Teams</h1>
</div>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td style="background-color: #<%= team.color %>; width: 20px; height: 20px;"></td>
        <td><%= link_to team.name_and_location, edit_admin_team_path(team) %> (<%= team.abbreviation %>)</td>
        <td><%= link_to 'Destroy', [:admin, team], confirm: 'Are you sure?', method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
